{
  "name": "physiotherapy-next",
  "version": "1.0.0",
  "description": "Modern physiotherapy website using Next.js",
  "scripts": {
    "dev": "cross-env NODE_OPTIONS='--inspect' next dev -p 5001",
    "build": "next build",
    "build:analyze": "cross-env ANALYZE=true next build",
    "postbuild": "next-sitemap",
    "start": "next start",
    "lint": "next lint",
    "clean": "rm -rf .next node_modules/.cache",
    "reset": "rm -rf .next node_modules package-lock.json && npm cache clean --force && npm install --legacy-peer-deps",
    "convert-images": "node scripts/convert-images.js",
    "optimize-images": "npm run convert-images"
  },
  "keywords": [
    "physiotherapy",
    "nextjs",
    "healthcare"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@emotion/is-prop-valid": "^1.3.0",
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^5.0.1",
    "@phosphor-icons/react": "^2.1.7",
    "@types/node": "22.14.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "critters": "^0.0.25",
    "framer-motion": "^12.7.4",
    "lucide-react": "^0.501.0",
    "next": "14.2.35",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.56.1",
    "react-hot-toast": "^2.5.2",
    "react-icons": "^5.5.0",
    "react-intersection-observer": "^9.16.0",
    "sharp": "^0.34.1",
    "swiper": "^11.2.6",
    "tailwind-merge": "^3.2.0",
    "tailwindcss-animate": "^1.0.7",
    "web-vitals": "^5.0.2",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.21",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "eslint-config-next": "^14.0.4",
    "eslint-config-prettier": "^10.1.2",
    "next-sitemap": "^4.2.3",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.1.6",
    "webpack-bundle-analyzer": "^4.10.2"
  }
